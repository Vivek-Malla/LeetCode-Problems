class Solution {
    public int[] getConcatenation(int[] nums) {
        int n = nums.length;
        int[] ans = new int[2*n];
        for(int i=0;i<2*n;i++){
            int x = i % n;
            ans[i] = nums[x];
        }
        return ans;
    }
}

